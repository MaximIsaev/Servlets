<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>
    <context:component-scan base-package="com"/>

    <bean id="loggerListener" class="com.logging.LoggerListener"/>
    <bean id="consoleEventLogger" class="com.logging.ConsoleEventLogger"/>

    <bean id="xmlParser" class="com.xml_parser.XMLParser" scope="prototype"/>
    <bean id="jsonStorage" class="com.json_storage.JSONStorage" scope="prototype"/>
    <bean id="filterByAuthor" class="com.news_filters.FilteringByAuthor">
        <constructor-arg value=""/>
    </bean>

    <bean id="dynamicJspContent" class="com.jsp_handler.DynamicJspContent" scope="prototype"/>
    <bean id="newsSession" class="com.news_session.NewsSession" scope="prototype"/>
    <bean id="downloadNewsFeedFile" class="com.get_news_feed_file.DownloadNewsFeedFile" scope="prototype"/>
</beans>