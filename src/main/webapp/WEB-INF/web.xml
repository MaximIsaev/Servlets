<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>NewsAgregator</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewsAgregator</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/NewsAgregator-servlet.xml</param-value>
    </context-param>

    <filter>
        <filter-name>newsFilter</filter-name>
        <filter-class>business_logic.news_filters.NewsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>newsFilter</filter-name>
        <url-pattern>/news</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <listener>
        <listener-class>business_logic.logging.LoggerListener</listener-class>
    </listener>

</web-app>